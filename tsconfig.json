{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2020",
    "target": "es2016",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": ["es2016"],
    "paths": {
      "include": ["src/*"]
    }
  }
}
